<%= form_tag charges_path do %>
  <h2>Premium Membership</h2>
  <h4>Click the button!</h4>
  <script class='stripe-button' src="https://checkout.stripe.com/checkout.js" data-key="<%= @stripe_btn_data[:key] %>" data-amount="<%= @stripe_btn_data[:amount] %>" data-description="<%= @stripe_btn_data[:description] %>" data-email="<%= @stripe_btn_data[:email]%>" ></script>
<% end %>

<p><%= link_to "Cancel Membership", {:controller => :charges, :action => :cancel}, class: 'btn btn-danger', :method => :patch %> </p>
